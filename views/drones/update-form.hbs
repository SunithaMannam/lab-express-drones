<div class="container">

    <div class="form-border">
        <form action="/drones/{{_id}}/edit" method="post">
            <h2>Update the drone</h2>
            <div id="form-inner">
                <div class="form-item">
                    <label for="name-input">Name:</label>
                    <input type="text" name="name" id="name-input" value="{{name}}" />
                </div>

                <div class="form-item">
                    <label for="propellers-input">Number of Propellers:</label>
                    <input type="text" name="propellers" id="propellers-input" value="{{propellers}}" />
                </div>

                <div class="form-item">
                    <label for="speed-input">Max. Speed:</label>
                    <input name="speed" id="speed-input" value="{{maxSpeed}}" />
                </div>

                <div class="form-item">
                    <button type="submit">Update the Drone </button>
                </div>
            </div>


        </form>
    </div>
</div>